<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dirty_white"
    tools:context=".TripMapActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@color/dirty_white"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:text="استراحة أريحا"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/jericoCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="وقت الوصول"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/jericoClockTex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="right"
                android:text="****"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="جسر اليهود"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/jewsCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="وقت الوصول"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/JewsClockTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="right"
                android:text="****"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="31dp"
            android:text="جسرالملك \nحسين"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/MHCircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="وقت الوصول"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/MHClockTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="right"
                android:text="****"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseline_access_time_24"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/EArrivingTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوقت المتوقع للوصول"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/ArrivingTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="****"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وقت الوصول"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="تم الوصول"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/navy_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="لم يتم الوصول"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/border" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>